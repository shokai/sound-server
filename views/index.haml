!!! XHTML
%html
  %head
    %title= @title
    :javascript
      var app_root = "#{app_root}";
    %script{:type => 'text/javascript', :src => "#{app_root}/js/jquery.js"}
    %script{:type => 'text/javascript', :src => "#{app_root}/js/index.js"}
    %link{:rel => 'stylesheet', :href => "#{app_root}/css/main.css", :type => 'text/css'}
  %body
    %div#content
      %div#head
        %h1= @title
        %h2 Upload
        %input{:type => :text, :id => 'upload_name', :value => 'share'}
        %input{:type => :button, :id => 'btn_upload', :value => 'Go'}
        %h2 API
        %hr
        %div
          source code : 
          - src_url = 'https://github.com/shokai/sound-server'
          %a{:href => src_url} #{src_url}
